<%= simple_form_for :settings, url: admin_settings_update_path, method: :put, html: { class: 'form-horizontal' } do |f| %>
  <fieldset>
    <%= f.input :host, input_html: { value: Settings.host } %>
    <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
      <i class="icon-ok icon-white"></i> Save
    <% end %>
  </fieldset>
<% end %>
